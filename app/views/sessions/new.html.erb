<%= form_for @user, url: login_path, method: :post do |f| %>
  <%= f.label :name %>
  <br>
  <%= f.text_field :name %>
  <br>

  <%= f.label :password %>
  <br>
  <%= f.password_field :password %>
  <br>
  <%= f.submit "log in" %>
  Or <%= link_to(controller: 'users, action: 'new') {'sign up'} %>
  

<% end %>